<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DarkThemeBase" parent="Theme.AppCompat">
        <item name="themeTextColor">@color/textMainDark</item>
        <item name="themeSubTextColor">@color/textWeakDark</item>
        <item name="themeLinkColor">@color/textLinkDark</item>
        <item name="themePropertyTitleColor">@color/textHighlightDark</item>
        <item name="themeFragmentBackground">@color/bgFragmentDark</item>
        <item name="themeCardBackground">@color/bgCardDark</item>
        <item name="themeFabDisable">@color/fabDisableDark</item>
        <item name="themeToolbarBackgroundDefault">@color/toolbarBackgroundDefaultDark</item>
        <item name="themeToolbarText">@color/textMainDark</item>
        <item name="themeProgressBackground">@color/bgProgressDark</item>
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accentDark</item>
        <item name="android:windowBackground">@color/bgDark</item>
        <item name="android:colorBackground">@color/bgDark</item>
        <item name="android:textColorPrimaryInverse">?android:attr/textColorPrimary</item>
    </style>

    <style name="DarkTheme" parent="DarkThemeBase">
        <item name="dialogTheme">@style/DarkDialog</item>
        <item name="android:dialogTheme">@style/DarkDialog</item>
        <item name="alertDialogTheme">@style/DarkDialog.Alert</item>
        <item name="android:alertDialogTheme">@style/DarkDialog.Alert</item>
        <item name="android:navigationBarColor">@color/bgDark</item>
    </style>

    <style name="DarkTheme.Settings">
        <item name="preferenceTheme">@style/PreferenceCompatTheme</item>
    </style>

    <style name="DarkDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:background">@color/bgDialogDark</item>
    </style>

    <style name="DarkDialog.Alert" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/bgDialogDark</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@transition/move_icon_transition</item>
        <item name="android:windowSharedElementReturnTransition">@transition/move_icon_transition</item>
    </style>

    <style name="DarkTheme.List">
        <item name="android:windowBackground">@color/bgListDark</item>
        <item name="android:colorBackground">@color/bgListDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkTheme.NoActionBar.Dark">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="DarkTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
</resources>
