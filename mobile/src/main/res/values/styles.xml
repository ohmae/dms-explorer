<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="themeTextColor">@color/textMain</item>
        <item name="themeSubTextColor">@color/textWeak</item>
        <item name="themeLinkColor">@color/textLink</item>
        <item name="themePropertyTitleColor">@color/textHighlight</item>
        <item name="themeFragmentBackground">@color/bgFragment</item>
        <item name="themeCardBackground">@color/bgCard</item>
        <item name="themeFabDisable">@color/fabDisable</item>
        <item name="themeToolbarBackgroundDefault">@color/toolbarBackgroundDefault</item>
        <item name="themeToolbarText">@color/textToolbar</item>
        <item name="themeProgressBackground">@color/bgProgress</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:colorBackground">@color/bg</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase"></style>

    <style name="AppTheme.Settings">
        <item name="preferenceTheme">@style/PreferenceCompatTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
        <item name="android:windowSharedElementEnterTransition">@transition/move_icon_transition</item>
        <item name="android:windowSharedElementReturnTransition">@transition/move_icon_transition</item>
    </style>

    <style name="AppTheme.List">
        <item name="android:windowBackground">@color/bgList</item>
        <item name="android:colorBackground">@color/bgList</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Dark">
        <item name="themeTextColor">@color/textMainDark</item>
        <item name="themeSubTextColor">@color/textWeakDark</item>
        <item name="themeLinkColor">@color/textLinkDark</item>
        <item name="themePropertyTitleColor">@color/textHighlightDark</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsedToolbarText">
        <item name="android:textSize">@dimen/text_size_toolbar</item>
    </style>

    <style name="ExpandedToolbarText">
        <item name="android:textSize">@dimen/text_size_toolbar_expand</item>
    </style>

    <style name="ContentCollapsedToolbarText" parent="CollapsedToolbarText">
        <item name="android:textColor">?attr/themeToolbarText</item>
    </style>

    <style name="ContentExpandedToolbarText" parent="ExpandedToolbarText">
        <item name="android:textColor">?attr/themeToolbarText</item>
    </style>
</resources>
