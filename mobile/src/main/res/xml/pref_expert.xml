<?xml version="1.0" encoding="utf-8"?><!--suppress AndroidElementNotAllowed -->
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <PreferenceCategory android:title="@string/pref_title_for_expert">
        <Preference
            android:selectable="false"
            android:summary="@string/pref_message_for_expert"
            app:iconSpaceReserved="false"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_content_list">
        <Preference
            android:key="SORT_KEY"
            android:title="@string/pref_title_content_sort"
            app:iconSpaceReserved="false"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_movie_ui">
        <SwitchPreference
            android:defaultValue="false"
            android:key="DO_NOT_SHOW_MOVIE_UI_ON_START"
            android:summary="@string/pref_message_movie_ui_do_not_show_on_start"
            android:title="@string/pref_title_movie_ui_do_not_show_on_start"
            app:iconSpaceReserved="false"
            />
        <SwitchPreference
            android:defaultValue="false"
            android:key="DO_NOT_SHOW_MOVIE_UI_ON_TOUCH"
            android:summary="@string/pref_message_movie_ui_do_not_show_on_touch"
            android:title="@string/pref_title_movie_ui_do_not_show_on_touch"
            app:iconSpaceReserved="false"
            />
        <SwitchPreference
            android:defaultValue="false"
            android:key="DO_NOT_SHOW_TITLE_IN_MOVIE_UI"
            android:summary="@string/pref_message_movie_ui_do_not_show_title"
            android:title="@string/pref_title_movie_ui_do_not_show_title"
            app:iconSpaceReserved="false"
            />
        <SwitchPreference
            android:defaultValue="false"
            android:key="IS_MOVIE_UI_BACKGROUND_TRANSPARENT"
            android:summary="@string/pref_message_movie_ui_transparent"
            android:title="@string/pref_title_movie_ui_transparent"
            app:iconSpaceReserved="false"
            />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_photo_ui">
        <SwitchPreference
            android:defaultValue="false"
            android:key="DO_NOT_SHOW_PHOTO_UI_ON_START"
            android:summary="@string/pref_message_photo_ui_do_not_show_on_start"
            android:title="@string/pref_title_photo_ui_do_not_show_on_start"
            app:iconSpaceReserved="false"
            />
        <SwitchPreference
            android:defaultValue="false"
            android:key="DO_NOT_SHOW_PHOTO_UI_ON_TOUCH"
            android:summary="@string/pref_message_photo_ui_do_not_show_on_touch"
            android:title="@string/pref_title_photo_ui_do_not_show_on_touch"
            app:iconSpaceReserved="false"
            />
        <SwitchPreference
            android:defaultValue="false"
            android:key="DO_NOT_SHOW_TITLE_IN_PHOTO_UI"
            android:summary="@string/pref_message_photo_ui_do_not_show_title"
            android:title="@string/pref_title_photo_ui_do_not_show_title"
            app:iconSpaceReserved="false"
            />
        <SwitchPreference
            android:defaultValue="false"
            android:key="IS_PHOTO_UI_BACKGROUND_TRANSPARENT"
            android:summary="@string/pref_message_photo_ui_transparent"
            android:title="@string/pref_title_photo_ui_transparent"
            app:iconSpaceReserved="false"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_orientation">
        <Preference
            android:selectable="false"
            android:summary="@string/pref_message_category_orientation"
            android:title="@string/pref_title_category_orientation"
            app:iconSpaceReserved="false"
            />
        <ListPreference
            android:entries="@array/orientation_entries"
            android:entryValues="@array/orientation_values"
            android:key="ORIENTATION_COLLECTIVE"
            android:title="@string/pref_title_orientation_collective"
            app:iconSpaceReserved="false"
            />
        <ListPreference
            android:defaultValue="UNSPECIFIED"
            android:entries="@array/orientation_entries"
            android:entryValues="@array/orientation_values"
            android:key="ORIENTATION_BROWSE"
            android:title="@string/pref_title_orientation_browse"
            app:iconSpaceReserved="false"
            />
        <ListPreference
            android:defaultValue="UNSPECIFIED"
            android:entries="@array/orientation_entries"
            android:entryValues="@array/orientation_values"
            android:key="ORIENTATION_MOVIE"
            android:title="@string/pref_title_orientation_movie"
            app:iconSpaceReserved="false"
            />
        <ListPreference
            android:defaultValue="UNSPECIFIED"
            android:entries="@array/orientation_entries"
            android:entryValues="@array/orientation_values"
            android:key="ORIENTATION_MUSIC"
            android:title="@string/pref_title_orientation_music"
            app:iconSpaceReserved="false"
            />
        <ListPreference
            android:defaultValue="UNSPECIFIED"
            android:entries="@array/orientation_entries"
            android:entryValues="@array/orientation_values"
            android:key="ORIENTATION_PHOTO"
            android:title="@string/pref_title_orientation_photo"
            app:iconSpaceReserved="false"
            />
        <ListPreference
            android:defaultValue="UNSPECIFIED"
            android:entries="@array/orientation_entries"
            android:entryValues="@array/orientation_values"
            android:key="ORIENTATION_DMC"
            android:title="@string/pref_title_orientation_dmc"
            app:iconSpaceReserved="false"
            />
    </PreferenceCategory>

</PreferenceScreen>
